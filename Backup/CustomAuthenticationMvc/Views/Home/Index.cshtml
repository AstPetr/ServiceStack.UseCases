<script>
    function helloService() {
        $.ajax({
            url: '@Url.Content("~/api/hello")',
            type: "GET",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: { name: "Passed Name" },
            success: function (data) { alert(data.Result); },
            error: function (xhr) {
                if (xhr.status === 401) {
                    alert('You should be authenticated to call service.');
                }
            }
        });
    }
</script>